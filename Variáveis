#include <stdbool.h>

int main() {
    int idade = 25;
    float altura = 1.75;
    double pi = 3.1415;
    char letra = 'B';
    bool ligado = true;

    printf("Idade: %d\n", idade);
    printf("Altura: %.2f\n", altura);
    printf("PI: %.4lf\n", pi);
    printf("Letra: %c\n", letra);
    printf("Ligado: %d\n", ligado); // true = 1
}
```

